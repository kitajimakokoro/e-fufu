<div class="container px-3 px-sm-0">
  <h1 class="my-5">
    <strong>ふうふのホンネ</strong>
  </h1>
    <div class="row justify-content-center">
      <div class="col-md-3 mr-4">
        <!-- カテゴリ一覧-->
        <%= render 'category', categories: @categories %>
      </div>
      <div class="col-md-8">
        <div class="row mb-3">
          <!--  検索窓  -->
          <%= render 'search' %>
          <!-- 新規登録ボタン-->
          <div class="form-group col-3 ml-auto text-right">
            <%= link_to "投稿する", new_post_path, class: "btn btn-block", style:"color:#FFFFFF; background-color:#696969;" %>
          </div>
        </div>
        <!-- 投稿一覧-->
        <div class="list-group" style= "width: 100%">
          <%= render 'post_list', posts: @posts %>
        </div>
        <div class="d-flex justify-content-center mt-2">
          <%= paginate @posts %>
        </div>
      </div>
    </div>
</div>