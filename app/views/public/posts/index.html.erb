<%= flash[:notice] %>
<h2>みんなの本音　TOP</h2>

<% @posts.each do |post| %>
<div>
  <p>投稿ユーザー画像：<%= image_tag post.user.get_profile_image(100,100) %></p>
  <%= link_to post_path(post.id) do %>
  <p>投稿文：<%= post.text %></p>
  <% end %>
  <p>投稿日：<%= post.created_at.strftime('%Y/%m/%d') %></p>
</div>
<% end %>