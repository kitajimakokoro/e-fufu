<% comments.each do |post_comment| %>
  <!--退会していない場合の処理(is_deleted:false)-->
  <% if post_comment.user.is_deleted == false %>
    <div>
      <div class="list-group-item list-group-item-action">
        <div class="row">
          <div class="col-md-2 text-center">
            <%= image_tag post_comment.user.get_profile_image(70,70), class:"rounded-circle" %>
          </div>
          <div class="col-md-10">
            <p>
              <%= link_to post_path(post_comment.post.id), class: "text-reset" do %>
                <%= truncate(post_comment.comment, length:35) %>
              <% end %>
            </p>
            <span>
              ｜<%= post_comment.created_at.strftime('%Y/%m/%d') %>｜
              <% if post_comment.user == current_user %>
                <%= link_to post_post_comment_path(post_comment.post, post_comment), method: :delete, "data-confirm" => "このコメントを削除しますか？", class:"text-reset text-decoration-none text-left" do %>
                  <i class="fas fa-trash-alt" style="color:#B22222"></i>
                <% end %>
              <% end %>
            </span>
          </div>
        </div>
      </div>
    </div>
  <!--退会している場合の処理(is_deleted:true)-->
  <% else %>
   <!--コメント自体を表示しない-->
  <% end %>
<% end %>