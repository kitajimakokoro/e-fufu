<div class="container">
  <div class="card rounded col-9 mx-auto mt-4" >
    <div class="row">
      <div class="col-12 p-0">
        <div class="card-header">
          <h4 class="text-center">カテゴリ一覧・追加</h4>
        </div>
        <div class="text-center p-3">
          <%=form_with model: @category, url:admin_categories_path,method: :post do |f| %>
            <%= f.text_field :name %>
            <%= f.submit"新規登録",class: "btn pr-2 pl-2" %>
          <% end %>
        </div>
        <table class="table table-hover text-center mt-2 mb-0">
          <thead class="table-active">
            <tr>
              <th style="width:80%">カテゴリ</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category|%>
              <tr>
                <td><%=category.name%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>