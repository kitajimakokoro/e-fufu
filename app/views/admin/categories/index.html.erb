<div class="container">
  <div class="card rounded col-lg-6 mx-auto mt-5" >
    <div class="row mt-6">
      <div class="col-lg-12 p-0">
        <div class="card-header">
          <h3 class="text-center">
            <strong>カテゴリ一覧・追加</strong>
          </h3>
        </div>
        <div class="d-flex justify-content-center  p-3 form-inline text-right ">
          <%=form_with model: @category, url:admin_categories_path,method: :post do |f| %>
            <%= f.text_field :name, placeholder: "カテゴリ名を入力", class:"form-control form-control-md" %>
            <%= f.submit"新規登録", class: "m-2 btn btn-outline-secondary" %>
          <% end %>
        </div>
        <table class="table text-center mt-2 mb-0">
          <thead class="table-active">
            <tr>
              <th style="width:80%">カテゴリ</th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category|%>
              <tr>
                <td><%=category.name%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>