<div class="container add-font">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h4 class="my-4"><mark class="bg-light">投稿履歴一覧</mark></h4>
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>投稿者</th>
            <th>カテゴリ名</th>
            <th>内容</th>
            <th>投稿日時</th>
          </tr>
        </thead>
        <tbody>
        <% @posts.each do |post| %>
        <tr>
  <td><%= post.user.name %></td>
  <td><%= post.category.name %></td>
  <td><%= link_to admin_post_path(post.id) do %>
  <%= post.text %>
   <% end %></td>
  <td>投稿日：<%= post.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= link_to "削除", admin_post_path(post), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    <% end %>
    </tr>
        </tbody>
      </table>
    </div>
  </div>
  </div>