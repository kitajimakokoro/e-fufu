<div class="container px-sm-0">
  <h2 class="my-4 ml-lg-5 pl-lg-5">
    <strong>
      <!-- user.idを拾ったらそのユーザーの投稿履歴一覧を表示-->
      <% if params[:user_id] %>
        <%= @user.name %>さんの投稿履歴一覧
      <% else %>
        投稿履歴一覧
      <% end %>
    </strong>
  </h2>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="list-group" style= "width: 100%">
        <% if @posts.any? %>
          <!-- 投稿一覧 -->
          <%= render 'admin/posts/post_list', posts: @posts %>
        <% else %>
          <div class="list-group-item text-center  p-2">
            <p class="p-2 m-2">投稿はありません</p>
          </div>
        <% end %>
        <div class="mx-auto mt-2">
          <%= paginate @posts %>
        </div>
      </div>
    </div>
  </div>
</div>