<div class="container px-sm-0">
  <h2 class="my-4 ml-5 pl-5">
    <strong>
      <!-- user.idを拾ったらそのユーザーの投稿履歴一覧を表示-->
      <% if params[:user_id] %>
        <%= @user.name %>さんの投稿履歴一覧
      <% else %>
        投稿履歴一覧
      <% end %>
    </strong>
  </h2>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="list-group" style= "width: 100%">
        <!-- 投稿一覧 -->
        <%= render 'admin/posts/post_list', posts: @posts %>
      </div>
    </div>
  </div>
</div>