<div class="container px-sm-0">
  <h2 class="my-4 ml-5 pl-5">
    <strong>
      <!-- user.idを拾ったらそのユーザーのコメント履歴一覧を表示-->
      <% if params[:user_id] %>
        <%= @user.name %>さんのコメント履歴一覧
      <% else %>
        コメント履歴一覧
      <% end %>
    </strong>
  </h2>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="list-group" style= "width: 100%">
          <!-- コメント一覧-->
          <%= render 'admin/post_comments/comment_list', comments: @comments %>
        </div>
      </div>
    </div>
</div>
